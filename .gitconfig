[user]
	name = Dimitrije RadojeviÄ‡
	email = dimitrijer@nordeus.com
[alias]
	g = gui
	cp = cherry-pick
	st = status -sb
	co = checkout
	df = diff
	dfc = diff --cached
	br = branch
	lnc = log --pretty=format:"%h\\ %s\\ [%cn]"
	filelog = log -u
	dr  = "!f() { git diff "$1"^.."$1"; }; f"
	diffr  = "!f() { git diff "$1"^.."$1"; }; f"
	lg = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %Cblue%an%Creset' --abbrev-commit
	grep = grep -Ii --recurse-submodules
	la = "!git config -l | grep alias | cut -c 7-"
	f = fetch
    oldest-ancestor = !zsh -c 'diff --old-line-format='' --new-line-format='' <(git rev-list --first-parent "${1:-master}") <(git rev-list --first-parent "${2:-HEAD}") | head -1' -
[color]
	ui = true
[merge]
	tool = kdiff3
[core]
	editor = vim
	mergeoptions = --no-edit
	autocrlf = false
[push]
	default = simple
	recurseSubmodules = check
[filter "lfs"]
	smudge = git-lfs smudge -- %f
	required = true
	clean = git-lfs clean -- %f
[sendemail]
	smtpencryption = tls
	smtpserver = smtp.gmail.com
	smtpserverport = 587
	smtpuser = dimitrijer@nordeus.com
	from = dimitrijer@nordeus.com
	smtpsslcertpath = /etc/ssl/cert.pem
